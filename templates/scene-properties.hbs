<section>
    <div class="form-group">
        <label>{{localize "linemap.ui.isLightMode"}}</label>
        <div class="form-fields">
            <select name="isLightMode">
                <option value="" {{#unless isLightMode}}selected{{/unless}}>{{localize "linemap.ui.darkMode"}}</option>
                <option value="true" {{#if isLightMode}}selected{{/if}}>{{localize "linemap.ui.lightMode"}}</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "linemap.ui.symbolScale"}}</label>
        <div class="form-fields">
            {{rangePicker name="symbolScale" value=symbolScale min=1.0 max=2.0 step=0.1}}
        </div>
    </div>
</section>